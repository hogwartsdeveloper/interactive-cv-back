// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserModel {
  id Int @id @default(autoincrement())
  email String
  name String
  password String
  role Role @default(USER)
}


model LocalModel {
  id Int @id @default(autoincrement())
  code String
  name LocalName?
}

model LocalName {
  id Int @id @default(autoincrement())
  en String
  kz String
  ru String
  local LocalModel @relation(fields: [localId], references: [id])
  localId Int @unique
}

enum Role {
  ADMIN
  USER
}